{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 10
    },
    "configurePresets": [
        {
            "name": "debug",
            "description": "Debug-Build mit Tests",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        }
    ]
}
